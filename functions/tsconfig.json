{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "$/*": [
                "./src/__common/*",
                "./dist/__common/*"
            ],
            "@/*": [
                "./src/*",
                "./dist/*"
            ],
        },
        "allowJs": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "removeComments": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": [
        "src"
    ],
    "exclude": [
        "**/node_modules/**"
    ]
}
